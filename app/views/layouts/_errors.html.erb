<% if object.errors.any? %>
<div id="error_explanation" %>
    <h2>
        <%= pluralize(object.errors.count, "error") %>
        prohibited this object from being saved:
    </h2>
    
    <% object.errors.full_messages.each do |msg| %>
        <h3><%= msg %></h3>
    <% end %>
</div>
<% end %>