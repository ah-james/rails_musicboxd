<%= form_for @review do |f| %>
    <% if @review.errors.any? %>
        <div id="error_explanation" %>
            <h2>
                <%= pluralize(@review.errors.count, "error") %>
                prohibited this review from being saved:
            </h2>
            <ul>
            <% @review.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    <%= f.label :review_text, "Review Text:" %>
    <%= f.text_area :review_text %>
    <br>
    <%= f.label :score, "Score:" %>
    <%= f.number_field :score, in: 0.0..10.0 %><br>

    <%= f.fields_for :track do |a| %>
        <%= a.label :track_title, "Favorite Tracks:" %>
        <%= a.text_field :track_title %><br>
    <% end %>
    <br>
    <%= f.hidden_field :album_id %>
    <%= f.submit %>
<% end %>