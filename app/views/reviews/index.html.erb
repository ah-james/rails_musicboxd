<% if params[:album_id] %>
    <h1>All Reviews for <%= @album.title %> by <%= @album.artist.artist_name %></h1>
<% else %>
    <h1>All Reviews</h1>
<% end %>

<ul>
<% @reviews.each do |review| %>
    <% if params[:album_id] %>
        <li>Review by <%= link_to review.user.name, review_path(review) %></li><br>
    <% else %>
        <li>Review by <%= link_to review.user.name, review_path(review) %> for <%= review.album.title %></li><br>
    <% end %>
<% end %>
</ul>

<% if params[:album_id] %>
    <p><%= link_to "Create a New Review", new_album_review_path(@album) %></p>
<% else %>
    <p><%= link_to "Create a New Review", new_review_path %></p>
<% end %><br>
<%= link_to "Edit Album", edit_album_path(@album) %>